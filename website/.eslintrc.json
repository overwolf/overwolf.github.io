{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "eslint-config-overwolf-ts",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended",
    "plugin:jsdoc/recommended",
    "plugin:@docusaurus/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "website/tsconfig.base.json"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "jsdoc"
  ],
  "rules": {
    "@docusaurus/string-literal-i18n-messages": "warn",
    "@docusaurus/no-untranslated-text": "warn",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "@typescript-eslint/interface-name-prefix": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/type-annotation-spacing": "off",
    "@typescript-eslint/no-use-before-define": "off",
    "@typescript-eslint/no-namespace": "off",
    "no-use-before-define": "off",
    "jsdoc/no-undefined-types": ["warn", {"definedTypes":["overwolf"]}],
    "jsdoc/no-multi-asterisks": "off",
    "jsdoc/require-jsdoc": "off",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-unused-vars": "warn",
    "space-before-function-paren": "off",
    "object-curly-spacing": "off",
    "padded-blocks": "off",
    "max-len": [
      "error",
      {
        "code": 80,
        "ignorePattern": "^(import\\s.+\\sfrom\\s.+;|\\} from\\s.+;)$",
        "ignoreUrls": true
      }
    ],
    "no-prototype-builtin": "off",
    "comma-dangle": "off",
    "prefer-promise-reject-errors": "off",
    "no-async-promise-executor": "off",
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "react/prop-types": "off",
    "radix": "off",
    "one-var": "off"
  }
}
